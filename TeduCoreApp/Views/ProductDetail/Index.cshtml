@model ProductDetailViewModel
@{
    ViewData["Title"] = Model.ProductDetail.SeoPageTitle;
    ViewData["MetaDescription"] = Model.ProductDetail.SeoDescription;
    ViewData["MetaKeyword"] = Model.ProductDetail.SeoKeywords;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/client-side/styles/product_styles.css">
    <link rel="stylesheet" type="text/css" href="~/client-side/styles/product_responsive.css">
    <link rel="stylesheet" type="text/css" href="~/client-side/styles/regular_styles.css">
    <link rel="stylesheet" type="text/css" href="~/client-side/styles/regular_responsive.css">
</head>
<!-- Single Product -->
@section Scripts{
    <script src="~/client-side/js/product_custom.js"></script>
}
<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    @foreach (var image in Model.ProductImages)
                    {
                        <li data-image="@Model.DomainApi@image.Path"><img src="@Model.DomainApi@image.Path" alt="@image.Caption"></li>
                    }
                </ul>
            </div>

            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected"><img src="@Model.DomainApi@Model.ProductImages.First().Path" alt="@Model.ProductImages.First().Caption"></div>
            </div>

            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">
                    <div class="product_category">@Model.ProductDetail.ProductCategory.Name</div>
                    <div class="product_name">@Model.ProductDetail.Name</div>
                    <div class="product_text"><p>@Model.ProductDetail.Description</p></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="single_post">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="single_post_title">Chi tiết sản phẩm</div>
                <div class="single_post_text imageReponsiteContent">
                    @Html.Raw(Model.ProductDetail.Content)
                </div>
                <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#configurator" data-width="" data-numposts="15"></div>
            </div>
        </div>
    </div>
</div>



<!-- Recently Viewed -->

<div class="viewed">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="viewed_title_container">
                    <h3 class="viewed_title">Sản phẩm liên quan</h3>
                </div>

                <div class="viewed_slider_container">

                    <!-- Recently Viewed Slider -->

                    <div class="owl-carousel owl-theme viewed_slider">
                        @foreach (var productc in Model.ProductRelate)
                        {
                            var urlp = "/" + productc.SeoAlias + ".p-" + productc.Id + ".html";
                            <!-- Recently Viewed Item -->
                            <div class="owl-item">
                                <div class="viewed_item d-flex flex-column align-items-center justify-content-center text-center">
                                    <div class="viewed_image"><img src="@Model.DomainApi@productc.ThumbnailImage" alt="@productc.Name"></div>
                                    <div class="viewed_content text-center">
                                        <div class="viewed_name"><a href="@urlp">@productc.Name</a></div>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.2"></script>