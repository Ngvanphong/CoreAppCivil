@using TeduCoreApp.Data.ViewModels.Product
@model MobileVewModel
<nav class="main_nav">
    <div class="container">
        <div class="row">
            <div class="col">

                <div class="main_nav_content d-flex flex-row">

                    <!-- Categories Menu -->

                    <div class="cat_menu_container">
                        <div class="cat_menu_title d-flex flex-row align-items-center justify-content-start">
                            <div class="cat_burger"><span></span><span></span><span></span></div>
                            <div class="cat_menu_text">Danh mục</div>
                        </div>
                        <ul class="cat_menu">
                            @{

                                foreach (var item in Model.listCategory)
                                {
                                    if (item.ParentId == null && Model.listCategory.Exists(x => x.ParentId == item.Id) == false)
                                    {
                                        var url1 = "/" + item.SeoAlias + ".pc-" + item.Id + ".html";
                                        <li><a href="@url1">@item.Name <i class="fas fa-chevron-right"></i></a></li>
                                    };
                                    if (item.ParentId == null && Model.listCategory.Exists(x => x.ParentId == item.Id) == true)
                                    {
                                        <li class="hassubs">
                                            <a href="#" style="pointer-events:none">@item.Name<i class="fas fa-chevron-right"></i></a>
                                            @{ var childPanrent1 = Model.listCategory.Where(x => x.ParentId == item.Id);}
                                            @foreach (var child1 in childPanrent1)
                                            {
                                                if (Model.listCategory.Exists(x => x.ParentId == child1.Id) == false)
                                                {
                                                    var url2 = "/" + child1.SeoAlias + ".pc-" + child1.Id + ".html";
                                                    <ul>
                                                        <li><a href="@url2">@child1.Name<i class="fas fa-chevron-right"></i></a></li>
                                                    </ul>
                                                }
                                                if (Model.listCategory.Exists(x => x.ParentId == child1.Id) == true)
                                                {
                                                    var child2 = Model.listCategory.Where(x => x.ParentId == child1.Id);
                                                    <ul>
                                                        <li class="hassubs">
                                                            <a href="#" style="pointer-events:none">@child1.Name<i class="fas fa-chevron-right"></i></a>
                                                            @foreach (var child3 in child2)
                                                            {
                                                                var url3 = "/" + child3.SeoAlias + ".pc-" + child3.Id + ".html";
                                                                <ul>
                                                                    <li><a href="@url3">@child3.Name<i class="fas fa-chevron-right"></i></a></li>
                                                                </ul>
                                                            }

                                                        </li>
                                                    </ul>

                                                }

                                            }
                                            
                                        </li>
                                    }
                                }
                            }
             
                        </ul>
                    </div>

                    <!-- Main Nav Menu -->

                    <div class="main_nav_menu ml-auto">
                        <ul class="standard_dropdown main_nav_dropdown">
                            <li><a href="/index.html">Trang chủ<i class="fas fa-chevron-down"></i></a></li>
                            <li class="hassubs">
                                <a href="#" style="pointer-events:none">Thương hiệu<i class="fas fa-chevron-down"></i></a>
                                <ul>
                                    @foreach(var pantner in Model.listPantner)
                                    {
                                        var urlpanter = "/pantner/" + pantner.Id + ".html";
                                        <li><a href="@urlpanter">@pantner.Name<i class="fas fa-chevron-down"></i></a></li> 
                                    }
                                    
                                </ul>
                            </li>
                            <li><a href="/about.html">Giới thiệu<i class="fas fa-chevron-down"></i></a></li>
                            <li><a href="/contact.html">Liên hệ<i class="fas fa-chevron-down"></i></a></li>
                            <li><a href="/policy.html">Chính sách<i class="fas fa-chevron-down"></i></a></li>
                            <li><a href="/blog.html">Blog<i class="fas fa-chevron-down"></i></a></li>

                        </ul>
                    </div>

                    <!-- Menu Trigger -->

                    <div class="menu_trigger_container ml-auto">
                        <div class="menu_trigger d-flex flex-row align-items-center justify-content-end">
                            <div class="menu_burger">
                                <div class="menu_trigger_text">menu</div>
                                <div class="cat_burger menu_burger_inner"><span></span><span></span><span></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>