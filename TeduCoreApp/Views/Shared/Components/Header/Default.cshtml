 @model HeaderViewModel
<!-- Top Bar -->
<div class="top_bar">
    <div class="container">
        <div class="row">
            <div class="col d-flex flex-row">
                <div class="top_bar_contact_item"><div class="top_bar_icon"><img src="~/client-side/images/phone.png" alt=""></div>@Model.contacts.Phone</div>
                <div class="top_bar_contact_item"><div class="top_bar_icon"><img src="~/client-side/images/mail.png" alt=""></div><a href="mailto:@Model.contacts.Email">@Model.contacts.Email</a></div>
            </div>
        </div>
    </div>
</div>

<!-- Header Main -->

<div class="header_main">
    <div class="container">
        <div class="row">

            <!-- Logo -->
            <div class="col-lg-2 col-sm-3 col-3 order-1">
                <div class="logo_container">
                    <div class="logo"><a href="/index.html">OneTech</a></div>
                </div>
            </div>

            <!-- Search -->
            <div class="col-lg-6 col-12 order-lg-2 order-3 text-lg-left text-right">
                <div class="header_search">
                    <div class="header_search_content">
                        <div class="header_search_form_container">
                            <form action="/product/search.html" id="search_mini_form" name="Categories" class="header_search_form clearfix">
                                <input type="search" required="required" name="searchProduct" id="search" class="header_search_input" placeholder="Tìm kiếm sản phẩm...">
                                <input type="hidden"  required="required" name="categoryid" id="categoryid" value="" >
                                <div class="custom_dropdown">
                                    <div class="custom_dropdown_list">
                                        <span class="custom_dropdown_placeholder clc">Danh mục</span>
                                        <i class="fas fa-chevron-down"></i>
                                        <ul class="custom_list clc">
                                            <li><a class="clc chosecategory" data-categoryid="" href="#">Tất cả</a></li>
                                            @foreach (var item in Model.listProductCategory)
                                            {
                                                <li><a class="clc chosecategory" data-categoryid="@item.Id" href="#">@item.Name</a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                                <button type="submit" id="btnSearchProduct" class="header_search_button trans_300" value="Submit"><img src="~/client-side/images/search.png" alt=""></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>